<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mkawa.okhttp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/creamclub"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="token_table.db" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="TRUE" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="mkawa.okhttp" />
        <meta-data
            android:name="VERSION"
            android:value="2" />

        <activity
            android:name=".contactActivity"
            android:label="Submit Beer"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".settings"
            android:label="Settings" />
        <activity
            android:name=".beerSearch"
            android:label="Search Beer" />
        <activity android:name=".LeaderBoard" />
        <activity
            android:name=".Market"
            android:label="Market" />
        <activity android:name=".TradeShare" />
        <activity android:name=".UserStatstics" />
        <activity android:name=".Dashboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserNameEntry"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_user_name_entry"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".SelectTeam" />
        <activity
            android:name=".Drop"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|mcc|mnc"
            android:screenOrientation="landscape" />
        <activity android:name=".CandleStickTokens"></activity>
    </application>

</manifest>